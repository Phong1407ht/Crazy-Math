<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/blackAlpha"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/d_10"
        android:layout_margin="@dimen/d_30"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/d_20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="@dimen/d_20">

            <com.techja.crazymath.view.widget.CrazyTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d_30"
                android:text="@string/txt_ready"
                android:textColor="@color/purple_700"
                android:textSize="28sp" />

            <com.techja.crazymath.view.widget.CrazyTextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20"
                android:background="@drawable/bg_radius"
                android:backgroundTint="@color/purple_500"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d_20"
                android:text="@string/txt_ok"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>